doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/styles/index.css')
  body
    - if (session.user) {
        div#login
            p
                span Вы вошли, как&nbsp;
                span= session.user.username
                span .
              p
                form(method="GET", action="/logout")
                  input(type="submit", value="Выйти")
    - } else {
      div#login
         h1 Вход
         form(method="POST", action="/session")
          div
            label(for="username") Сетевое имя:
          div
            input#username(name="username", placeholder="Введите логин в формате 123456", required="", maxlength="6", size="32", pattern="\\d{6}", autofocus)
          div
            label(for="password") Пароль:
          div
            input#password(type="password", name="password", placeholder="Введите пароль", required="", size="32")
          div
            input(type="submit", value="Вход")
    - }
    
    include footer